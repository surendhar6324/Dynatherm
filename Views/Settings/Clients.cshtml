<script type="text/javascript">

    function Clients_Load_Details(num) {
        var TakeCount = document.getElementById("ddlClientsTake").value;
        var Search = document.getElementById("txtClientsSearch").value;

        var SortColumn = document.getElementById("hdnSortColumn").value;
        var SortAscending = document.getElementById("hdnSortAscending").value;

        var datafilter = {
            take: TakeCount,
            searchvalue: Search,
            skip: num,
            sortcolumn: SortColumn,
            sortascending: SortAscending
        };

        $.ajax({
            type: "POST",
            url: '../Request/Clients_Load',
            content: "application/json; charset=utf-8",
            dataType: "json",
            traditional: true,
            data: datafilter,
            success: function (response) {
                Clients_Load(response);
            },
            error: function (xhr) {
                HideElement('divoverlay');
            }
        });

        $.ajax({
            type: "POST",
            url: '../Request/ClientsCount_Load',
            content: "application/json; charset=utf-8",
            dataType: "json",
            traditional: true,
            data: datafilter,
            success: function (response) {
                ClientsCount_Load(response);
            },
            error: function (xhr) {
                HideElement('divoverlay');
            }
        });

    }

    function Clients_Load(response) {
        var dListdatafilter = JSON.parse(response.listdatafilter);

        Listdatafilter = '';
        //Listdatafilter += '<div id="divtbl">';
        for (var i = 0; i < dListdatafilter.length; i++) {
            Listdatafilter += '<tr role="row" class="odd">';
            Listdatafilter += '<td style="width:20%">' + dListdatafilter[i].client_name + '</td>';
            Listdatafilter += '<td style="width:15%">' + dListdatafilter[i].purchaser + '</td>';
            Listdatafilter += '<td style="width:15%">' + dListdatafilter[i].state + '</td>';
            Listdatafilter += '<td style="width:20%">' + dListdatafilter[i].location + '</td>'; 
            Listdatafilter += '<td style="width:5%"><button type="button" class="btn btn-warning btn-flat" data-toggle="modal" data-target="#modal-asgn0002" onclick="Ëdit_Clients_Clicked(' + dListdatafilter[i].client_id + ')"><i class="fas fa-edit"></i></button></td > ';
            Listdatafilter += '</tr>';
        }
        document.getElementById('tbClients').innerHTML = Listdatafilter;

        if (dListdatafilter.length == 0) {
            document.getElementById('tbClients').innerHTML = '<tr class="odd dataTables_empty"><td valign="top" colspan="14" style="text-align:center;">No records found</td></tr>';
        }
        HideElement('divoverlay');
    }

    function ClientsCount_Load(response) {
        var SkipCount = JSON.parse(response.skipCount);
        var TotalCount = JSON.parse(response.totalCount);

        var totalPage = Math.floor(TotalCount / document.getElementById("ddlClientsTake").value);
        var remainder = TotalCount % document.getElementById("ddlClientsTake").value;
        if (remainder > 0) {
            totalPage = totalPage + 1
        }
        if (totalPage == '0') {
            totalPage = 1
        }

        var showCount = +SkipCount + +1;
        if (TotalCount == '0') {
            showCount = '0';
        }

        var toCount = +SkipCount + +document.getElementById("ddlClientsTake").value;

        if (toCount > TotalCount) {
            toCount = +SkipCount + +remainder;
        }

        document.getElementById('lblClientsCount').innerText = (showCount) + "-" + (toCount) + " of " + TotalCount + " records";

        Init_BootPage('Pagination-Clients', totalPage); 
    }

    function Clients_Init_Table() {

        var html = '<div class="table-responsive"><table id="tblClients" class="table table-hover text-nowrap" style="width:100%">';
        html += '<thead><tr style="font-weight:bold">';

        html += '<td style="width:20%">Client Name<div style="float: right;">';
        html += '<button type="button" class="btn btn-link" id="ServiceNameSRT"' + '" value="servicename" style="color:grey;margin: -10px" onclick="Clients_Sort_Table(this);"><i class="sssorting_def"></i></button>';
        html += '</div></td>';

        html += '<td style="width:15%">Purchaser<div style="float: right;">';
        html += '<button type="button" class="btn btn-link" id="ServiceNameSRT"' + '" value="membername" style="color:grey;margin: -10px" onclick="Clients_Sort_Table(this);"><i class="sssorting_def"></i></button>';
        html += '</div></td>';

        html += '<td style="width:15%">State<div style="float: right;">';
        html += '<button type="button" class="btn btn-link" id="ServiceNameSRT"' + '" value="membername" style="color:grey;margin: -10px" onclick="Clients_Sort_Table(this);"><i class="sssorting_def"></i></button>';
        html += '</div></td>';

        html += '<td style="width:20%">Location<div style="float: right;">';
        html += '</div></td>'; 

        html += '<td style="width:5%"></td>';

        html += '</tr></thead>';

        html += '<tbody id="tbClients">';

        html += '</tbody>';
        html += '</table></div>';

        document.getElementById('divClients').innerHTML = html;

        $('#tblClients tbody').on('click', 'tr', function () {
            $(this).addClass('selected').siblings().removeClass("selected");
        });
    }

    function Clients_Sort_Table(table) {

        // Begining of Sort
        var currentCell = document.getElementById(table.id);
        var value = currentCell.value;
        var sortAsc;

        var changeIcon = currentCell.children[0];
        var newIcon;
        if (changeIcon.classList.contains('sssorting_asc')) {
            newIcon = 'sssorting_desc';
            sortAsc = false;
        }
        else if (changeIcon.classList.contains('sssorting_desc')) {
            newIcon = 'sssorting_asc';
            sortAsc = true;
        }
        else if (changeIcon.classList.contains('sssorting_def')) {
            newIcon = 'sssorting_asc';
            sortAsc = true;
        }

        changeIcon.className = '';
        var tableheader = $(document.getElementById(table.id)).parents().eq(2);
        for (var j = 0, col; col = tableheader[0].cells[j]; j++) {
            var button = col.children;
            if (button.length > 0 && col.children[0].tagName == 'DIV') {
                var icon = col.children[0].children[0].children[0];
                icon.className = '';
                icon.classList.add('sssorting_def');
            }
            //iterate through columns
            //columns would be accessed using the "col" variable Clientsed in the for loop
        }
        changeIcon.className = '';
        changeIcon.classList.add(newIcon);

        document.getElementById("hdnSortColumn").value = value;
        document.getElementById("hdnSortAscending").value = sortAsc;
        // End of Sort
        ResetPagination('Pagination-Clients');
        Clients_Load_Details(1);
    }


    function clearPageData() {
        $("#txtClientName").val('');
        $("#txtPurchaser").val('');
        document.getElementById('ddlState').selectedIndex = 0;
        $("#txtLocation").empty(); 

        $("#hdnClientID").val('');
    }


        document.getElementById('ddlState').value = dClients.state;

        Clients_DropDown_Load(response);
    }

    function Clients_DropDown_Load(response) {
        var dClientsPartners = JSON.parse(response.unClients_Partners);

        var ddlState = document.getElementById("ddlState");

        for (var i = 0; i < dClientsPartners.length; i++) {

            var editoption = document.createElement('option');
            var single = dClientsPartners[i];
            editoption.text = single.state_name;
            editoption.value = single.state_id;

            ddlState.add(editoption, i);
        }
    }

    function doClientsSearch() {
        clearTimeout(delayTimer);
        delayTimer = setTimeout(function () {
            ResetPagination('Pagination-Clients');
            Clients_Load_Details(1);
        }, 800);
    }

    function ShowElement(element) {
        var x = document.getElementById(element);
        x.style.display = "block";
    }
    function HideElement(element) {
        var x = document.getElementById(element);
        x.style.display = "none";
    }
</script>
